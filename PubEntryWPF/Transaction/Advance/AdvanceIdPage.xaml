<Page x:Class="PubEntryWPF.Transaction.Advance.AdvanceIdPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PubEntryWPF.Transaction.Advance"
      mc:Ignorable="d" Title="Advance Id"
      d:DesignHeight="450" d:DesignWidth="800">

	<Grid VerticalAlignment="Center" HorizontalAlignment="Center">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<Label Grid.Row="0" Grid.Column="0" Margin="10" Padding="5" Content="Advance Id" />
		<TextBox x:Name="advanceIdTextBox" Grid.Row="0" Grid.Column="1" Margin="10" Padding="5" MinWidth="100" PreviewTextInput="textBox_PreviewTextInput" />
		<Button x:Name="loadButton" Content="Load Advance" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10" Padding="5" MinWidth="150" MinHeight="40" HorizontalAlignment="Center" Style="{DynamicResource AccentButtonStyle}" Click="loadButton_Click" IsDefault="True" />
	</Grid>
</Page>
