@page "/Login"

<div class="login-container">
	<!-- Header Section -->
	<div class="login-header">
		<div class="logo-section">
			<img src="images/logo.jpg" alt="Pub Entry Logo" class="logo-image" />
			<h1 class="app-title">Pub Entry</h1>
			<p class="app-subtitle">Welcome Back</p>
		</div>
	</div>

	<!-- Login Form -->
	<div class="login-form">
		<div class="form-card">
			<h2 class="form-title">Sign In</h2>

			<div class="form-group">
				<label class="form-label">User</label>
				<SfComboBox TValue="int"
							TItem="UserModel"
							FloatLabelType='@FloatLabelType.Never'
							Placeholder="Choose User"
							DataSource="_users"
							@bind-Value="_selectedUserId"
							CssClass="modern-input">in UI
					<ComboBoxFieldSettings Value="Id" Text="Name" />
				</SfComboBox>
			</div>

			<div class="form-group">
				<label class="form-label">Password</label>
				<SfTextBox Type="InputType.Password"
						   FloatLabelType='@FloatLabelType.Never'
						   Placeholder="Enter Password"
						   @bind-Value="_password"
						   CssClass="modern-input" />
			</div>

			<div class="form-actions">
				<SfButton Content="Sign In"
						  OnClick="LogIn"
						  CssClass="login-btn" />
			</div>
		</div>
	</div>

	<!-- Footer -->
	<div class="login-footer">
		<p>&copy; @DateTime.Now.Year A Product By <a href="https://aadisoft.vercel.app" target="_blank" class="footer-link">AadiSoft</a>. All rights reserved.</p>
	</div>
</div>

<style>
	/* Company Colors & Variables */
	:root {
		--primary-color: #363555;
		--accent-color: #DFBA6A;
		--primary-light: #4a476b;
		--accent-light: #e5c47a;
		--text-dark: #2d2d2d;
		--text-light: #666666;
		--background: linear-gradient(135deg, #fafafa 0%, #f0f2f5 100%);
		--white: #ffffff;
		--border: #e1e5e9;
		--shadow: 0 4px 20px rgba(54, 53, 85, 0.1);
		--shadow-hover: 0 8px 30px rgba(54, 53, 85, 0.15);
		--radius: 16px;
		--radius-sm: 8px;
		--transition: all 0.3s ease;
	}

	/* Base Styles */
	.login-container {
		min-height: 100vh;
		background: var(--background);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 2rem 1rem;
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	}

	/* Header Section */
	.login-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.logo-section {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
	}

	.logo-image {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid var(--primary-color);
		margin-bottom: 0.5rem;
		filter: drop-shadow(0 4px 8px rgba(54, 53, 85, 0.2));
		transition: var(--transition);
	}

		.logo-image:hover {
			transform: scale(1.05);
			border-color: var(--accent-color);
		}

	.app-title {
		font-size: 2.5rem;
		font-weight: 700;
		color: var(--primary-color);
		margin: 0;
		letter-spacing: -0.5px;
	}

	.app-subtitle {
		font-size: 1rem;
		color: var(--text-light);
		margin: 0;
		font-weight: 400;
	}

	/* Login Form */
	.login-form {
		width: 100%;
		max-width: 400px;
		margin-bottom: 2rem;
	}

	.form-card {
		background: var(--white);
		border-radius: var(--radius);
		padding: 2.5rem 2rem;
		box-shadow: var(--shadow);
		border: 1px solid var(--border);
		transition: var(--transition);
	}

		.form-card:hover {
			box-shadow: var(--shadow-hover);
			transform: translateY(-2px);
		}

	.form-title {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--primary-color);
		text-align: center;
		margin: 0 0 2rem 0;
	}

	/* Form Groups */
	.form-group {
		margin-bottom: 1.5rem;
	}

	.form-label {
		display: block;
		font-weight: 500;
		color: var(--text-dark);
		margin-bottom: 0.5rem;
		font-size: 0.9rem;
	}

	/* Form Actions */
	.form-actions {
		margin-top: 2rem;
		text-align: center;
	}

	.login-btn {
		background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%) !important;
		color: var(--white) !important;
		border: none !important;
		border-radius: var(--radius-sm) !important;
		padding: 0.875rem 2rem !important;
		font-weight: 600 !important;
		font-size: 1rem !important;
		cursor: pointer !important;
		transition: var(--transition) !important;
		box-shadow: var(--shadow) !important;
		width: 100% !important;
		text-transform: uppercase !important;
		letter-spacing: 0.5px !important;
	}

		.login-btn:hover {
			background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-color) 100%) !important;
			transform: translateY(-2px) !important;
			box-shadow: var(--shadow-hover) !important;
		}

		.login-btn:active {
			transform: translateY(0) !important;
		}

	/* Footer */
	.login-footer {
		text-align: center;
		margin-top: auto;
		padding: 1rem;
	}

		.login-footer p {
			color: var(--text-light);
			font-size: 0.875rem;
			margin: 0;
		}

	.footer-link {
		color: var(--primary-color);
		text-decoration: none;
		font-weight: 600;
		transition: color 0.2s ease;
	}

		.footer-link:hover {
			color: var(--accent-color);
			text-decoration: underline;
		}

	/* Syncfusion Component Overrides */
	.modern-input {
		width: 100% !important;
	}

	.e-input-group,
	.e-ddl,
	.e-combobox {
		border-radius: var(--radius-sm) !important;
		border: 2px solid var(--border) !important;
		box-shadow: none !important;
		transition: var(--transition) !important;
		background: var(--white) !important;
	}

		.e-input-group:focus-within,
		.e-ddl:focus-within,
		.e-combobox:focus-within,
		.e-input-group.e-input-focus,
		.e-ddl.e-input-focus,
		.e-combobox.e-input-focus {
			border-color: var(--primary-color) !important;
			box-shadow: 0 0 0 3px rgba(54, 53, 85, 0.1) !important;
		}

		.e-input-group input,
		.e-ddl input,
		.e-combobox input {
			padding: 0.875rem 1rem !important;
			font-size: 0.95rem !important;
			color: var(--text-dark) !important;
			border: none !important;
			background: transparent !important;
		}

			.e-input-group input::placeholder,
			.e-ddl input::placeholder,
			.e-combobox input::placeholder {
				color: var(--text-light) !important;
			}

		/* Dropdown specific styles */
		.e-ddl .e-input-group,
		.e-combobox .e-input-group {
			border: none !important;
			box-shadow: none !important;
		}

	.e-ddl,
	.e-combobox {
		min-height: 48px !important;
	}

		.e-ddl .e-ddl-icon,
		.e-combobox .e-input-group-icon {
			color: var(--primary-color) !important;
			font-size: 1rem !important;
		}

	/* Responsive Design */
	@@media (max-width: 768px) {
		.login-container {
			padding: 1rem;
		}

		.form-card {
			padding: 2rem 1.5rem;
		}

		.app-title {
			font-size: 2rem;
		}

		.logo-image {
			width: 70px;
			height: 70px;
		}
	}

	@@media (max-width: 480px) {
		.login-container {
			padding: 1rem 0.75rem;
		}

		.form-card {
			padding: 1.5rem 1rem;
		}

		.app-title {
			font-size: 1.75rem;
		}

		.logo-image {
			width: 60px;
			height: 60px;
		}

		.login-btn {
			padding: 0.75rem 1.5rem !important;
			font-size: 0.9rem !important;
		}
	}

	/* Loading Animation */
	@@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}

		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.form-card,
	.login-header {
		animation: fadeInUp 0.5s ease-out;
	}

	.login-header {
		animation-delay: 0.1s;
	}

	.form-card {
		animation-delay: 0.2s;
	}

	/* Focus styles for accessibility */
	.login-btn:focus,
	.e-input-group:focus-within,
	.e-ddl:focus,
	.e-combobox:focus {
		outline: 2px solid var(--accent-color);
		outline-offset: 2px;
	}
</style>